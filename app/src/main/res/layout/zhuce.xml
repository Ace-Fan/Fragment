<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_zhu"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tw1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:textSize="20sp"
        android:text="姓名:"/>
    <EditText
        android:id="@+id/edit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="输入姓名"
        android:gravity="center"
        android:maxLength="10"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"/>

    <TextView
        android:id="@+id/tw2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@id/tw1"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="22dp"
        android:textSize="20sp"
        android:text="手机号:"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="输入手机号"
        android:gravity="center"
        android:ems="10"
        android:layout_below="@+id/edit1"
        android:layout_alignLeft="@+id/edit1"
        android:layout_alignStart="@+id/edit1"
        android:layout_marginTop="44dp"
        android:id="@+id/edit2" />

    <TextView
        android:id="@+id/tw3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tw2"
        android:layout_marginTop="63dp"
        android:layout_marginLeft="40dp"
        android:textSize="20sp"
        android:text="密码:"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="输入密码"
        android:gravity="center"
        android:ems="10"
        android:layout_below="@+id/edit2"
        android:layout_alignLeft="@+id/edit2"
        android:layout_alignStart="@+id/edit2"
        android:layout_marginTop="44dp"
        android:id="@+id/edit3" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/SVS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset"
        android:layout_below="@id/edit3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tage"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="5dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="年龄："/>

            <EditText
                android:id="@+id/etage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="输入年龄"
                android:gravity="center"
                android:maxLength="10"
                android:ems="10"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/tsex"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|right"
                android:layout_below="@id/tage"
                android:layout_alignLeft="@id/tage"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="性别："
                android:textColor="#000000"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/esex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="输入性别"
                android:gravity="center"
                android:maxLength="10"
                android:ems="10"
                android:layout_below="@id/etage"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="44dp"/>


    <Button
        android:text="注册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/esex"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/button3"
        android:background="@drawable/btn1"/>

    <Button
        android:text="返回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/button4"
        android:background="@drawable/btn1"/>

</RelativeLayout>
    </RelativeLayout>
    </RelativeLayout>
