<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"    
    android:background="#d9e5eb" 
    android:gravity="top">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="我的信息"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:textColor="#000"/>
    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/tableLayout1">
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tableRow1">
            <TextView android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/textView1" android:textColor="#000000" android:text="Name:"></TextView>
            <TextView android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/textView2" android:textColor="#000000" android:text="TextView"></TextView>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tableRow2">
            <TextView android:layout_width="wrap_content" android:layout_weight="1" android:id="@+id/textView3" android:textColor="#000000" android:text="Phone:" android:layout_height="wrap_content"></TextView>
            <TextView android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/textView4" android:textColor="#000000" android:text="TextView"></TextView>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tableRow3">
            <TextView android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/textView5" android:textColor="#000000" android:text="Password:"></TextView>
            <TextView android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/textView6" android:textColor="#000000" android:text="TextView"></TextView>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tableRow4">
            <TextView android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/textView7" android:textColor="#000000" android:text="Age:"></TextView>
            <TextView android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content" android:id="@+id/textView8" android:textColor="#000000" android:text="TextView"></TextView>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/tableRow5">
            <TextView android:textColor="#000000" android:id="@+id/textView9" android:text="Sex:" android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content"></TextView>
            <TextView android:textColor="#000000" android:id="@+id/textView10" android:text="TextView" android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content"></TextView>
        </TableRow>
    </TableLayout>
    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/tableLayout2">
    </TableLayout>


 </LinearLayout>